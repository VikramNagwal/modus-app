{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": { "ignoreUnknown": false, "ignore": [] },
  "formatter": { 
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "bracketSpacing": true,
    "indentWidth": 3,
    "attributePosition": "multiline",
    "lineEnding": "lf"
   },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "javascript": { "formatter": { "quoteStyle": "double" } }
}
